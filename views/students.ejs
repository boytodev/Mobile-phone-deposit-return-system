<%- include('partials/header') %>

<% if (students.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>รหัสนักเรียน</th>
                <th>ชื่อ</th>
                <th>นามสกุล</th>
                <th>ชั้นเรียน</th>
                <th>โทรศัพท์</th>
                <th>รายละเอียด</th>
                <th>หมายเหตุ</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.studentId %></td>
                    <td><%= student.firstName %></td>
                    <td><%= student.lastName %></td>
                    <td><%= student.grade || '-' %></td>
                    <td><%= student.phone %></td>
                    <td><a href="/students/<%= student.studentId %>">ดูรายละเอียด</a></td>
                    <td style="display: flex; gap: 10px;">
                        <a style="color: red;" href="/students/delete/<%= student.studentId %>">Delete</a>
                        <a href="/students/edit/<%= student.studentId %>">Edit</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p>ยังไม่มีข้อมูลนักเรียนในระบบ</p>
<% } %>

<%- include('partials/footer') %>